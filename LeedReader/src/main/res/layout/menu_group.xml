<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/themeBackgroundColor"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/labelGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="289.81"
        android:gravity="left|center_vertical"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:text="Group"
        android:textColor="@color/menuTextColor"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/feedNoReadGroup"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/menu_group_shape"
            android:gravity="center_horizontal|center_vertical"
            android:text="999"
            android:textColor="@color/menuNbArticlesColor"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>