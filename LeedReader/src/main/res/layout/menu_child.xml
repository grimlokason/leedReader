<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/themeBackgroundColor"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/labelChild"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="289.81"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="Child"
        android:textColor="@color/menuTextColor"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/feedNoReadChildLayout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/feedNoReadChild"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/menu_group_shape"
            android:gravity="center_horizontal|center_vertical"
            android:text="999"
            android:textColor="@color/menuNbArticlesColor"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>